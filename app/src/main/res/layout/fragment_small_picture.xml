<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/smallPic_image_cat1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/cat6"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.029"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/smallPic_image_cat2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/cat2"
        android:transitionName="shared_cat"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.029"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smallPic_image_cat1" />

    <ImageView
        android:id="@+id/smallPic_image_cat3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/cat3"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.029"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smallPic_image_cat2" />

    <ImageView
        android:id="@+id/smallPic_image_cat4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/cat4"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.029"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smallPic_image_cat3" />


    <ImageView
        android:id="@+id/smallPic_image_cat5"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/cat5"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.029"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smallPic_image_cat4" />


    <TextView
        android:id="@+id/smallPic_text_label"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:fontFamily="sans-serif-thin"
        android:text="Милая кошка"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/smallPic_image_cat5"
        app:layout_constraintStart_toEndOf="@+id/smallPic_image_cat1"
        app:layout_constraintTop_toTopOf="@+id/smallPic_image_cat5"
        app:layout_constraintVertical_bias="0.511" />

    <TextView
        android:id="@+id/smallPic_text_label5"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:fontFamily="sans-serif-thin"
        android:text="Мои хозяева не очень"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/smallPic_image_cat4"
        app:layout_constraintStart_toEndOf="@+id/smallPic_image_cat1"
        app:layout_constraintTop_toTopOf="@+id/smallPic_image_cat4" />

    <TextView
        android:id="@+id/smallPic_text_label4"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:fontFamily="sans-serif-thin"
        android:text="Хлебная кошка"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/smallPic_image_cat3"
        app:layout_constraintStart_toEndOf="@+id/smallPic_image_cat1"
        app:layout_constraintTop_toTopOf="@+id/smallPic_image_cat3"
        app:layout_constraintVertical_bias="0.465" />

    <TextView
        android:id="@+id/smallPic_text_label3"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:fontFamily="sans-serif-thin"
        android:text="Норвежская лесная"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/smallPic_image_cat2"
        app:layout_constraintStart_toEndOf="@+id/smallPic_image_cat1"
        app:layout_constraintTop_toTopOf="@+id/smallPic_image_cat2" />

    <TextView
        android:id="@+id/smallPic_text_label2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:fontFamily="sans-serif-thin"
        android:text="Бенгальская"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/smallPic_image_cat1"
        app:layout_constraintStart_toEndOf="@+id/smallPic_image_cat1"
        app:layout_constraintTop_toTopOf="@+id/smallPic_image_cat1"
        app:layout_constraintVertical_bias="0.534" />

    <TextView
        android:id="@+id/smallPic_text_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="30dp"
        android:text="Page 1"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

